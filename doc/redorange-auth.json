          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"temp_token\": \"{{temp_token}}\",\n  \"code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/2fa/verify",
              "host": ["{{base_url}}"],
              "path": ["auth", "2fa", "verify"]
            }
          }
        },
