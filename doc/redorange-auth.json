          "name": "Verify Backup Code (Login)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.access_token) {",
                  "    pm.collectionVariables.set('access_token', jsonData.data.access_token);",
                  "    pm.collectionVariables.set('refresh_token', jsonData.data.refresh_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"temp_token\": \"{{temp_token}}\",\n  \"backup_code\": \"XXXX-XXXX\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/2fa/verify-backup",
              "host": ["{{base_url}}"],
              "path": ["auth", "2fa", "verify-backup"]
