        {
          "name": "Google OAuth Initiate",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/oauth/google?redirect_uri=http://localhost:3000/auth/callback&state=random123",
              "host": ["{{base_url}}"],
              "path": ["auth", "oauth", "google"],
              "query": [
                {
                  "key": "redirect_uri",
                  "value": "http://localhost:3000/auth/callback"
                },
                {
                  "key": "state",
                  "value": "random123"
                }
              ]
            }
          }
        },
