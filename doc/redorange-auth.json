              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"password123\",\n  \"code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/2fa/disable",
              "host": ["{{base_url}}"],
              "path": ["auth", "2fa", "disable"]
            }
          }
        },
