              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"include_current\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/sessions/all",
              "host": ["{{base_url}}"],
              "path": ["auth", "sessions", "all"]
            }
          }
        }
      ]
    },
    {
      "name": "OAuth",
