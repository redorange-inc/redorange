              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"setup_token\": \"{{setup_token}}\",\n  \"code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/2fa/verify-enable",
              "host": ["{{base_url}}"],
              "path": ["auth", "2fa", "verify-enable"]
            }
          }
        },
        {
          "name": "Verify 2FA (Login)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.access_token) {",
                  "    pm.collectionVariables.set('access_token', jsonData.data.access_token);",
                  "    pm.collectionVariables.set('refresh_token', jsonData.data.refresh_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
